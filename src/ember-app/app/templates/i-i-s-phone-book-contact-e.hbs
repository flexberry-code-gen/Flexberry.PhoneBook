<h3 class="ui header">{{t "forms.i-i-s-phone-book-contact-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.name
      class=(if (v-get validationObject "name" "isInvalid") "error")
      label=(t "forms.i-i-s-phone-book-contact-e.name-caption")
      data-test-i-i-s-phone-book-contact-e-name=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "name" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.phone
      class=(if (v-get validationObject "phone" "isInvalid") "error")
      label=(t "forms.i-i-s-phone-book-contact-e.phone-caption")
      data-test-i-i-s-phone-book-contact-e-phone=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "phone" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-phone-book-contact-e.contactType-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.contactType
      class=(if (v-get validationObject "contactType" "isInvalid") "error")
      displayAttributeName="name"
      autocomplete=true
      relationName="contactType"
      projection="ContactTypeL"
      title=(t "forms.i-i-s-phone-book-contact-e.contactType-caption")
      readonly=readonly
      componentName="contactTypeLookup"
      class=(if (v-get validationObject "contactType" "isInvalid") "error")
      data-test-i-i-s-phone-book-contact-e-contactType=true
    }}
    {{flexberry-validationmessage error=(v-get validationObject "contactType" "message")}}
  </div>

</form>